import '../styles/global.css';

const services = [
  {
    title: 'Sviluppo WordPress',
    description: 'Temi personalizzati, plugin su misura e ottimizzazione performance per siti WordPress professionali.',
    icon: 'üöÄ',
    features: ['Temi Personalizzati', 'Plugin Custom', 'Ottimizzazione SEO', 'Manutenzione']
  },
  {
    title: 'Applicazioni Laravel',
    description: 'Sviluppo di applicazioni web robuste e scalabili con il framework Laravel pi√π moderno.',
    icon: '‚ö°',
    features: ['API REST', 'Dashboard Admin', 'Sistema Auth', 'Database Design']
  },
  {
    title: 'E-commerce Solutions',
    description: 'Negozi online completi con WooCommerce o soluzioni custom per vendite digitali.',
    icon: 'üõí',
    features: ['WooCommerce', 'Payment Gateway', 'Gestione Magazzino', 'Analytics']
  },
  {
    title: 'Consulenza Tecnica',
