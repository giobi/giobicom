                    <span style="color: var(--color-teal-blue);"> {</span>
                  </div>
                  <div class="ml-4 mt-2">
                    <span style="color: var(--color-teal-blue);">experience</span>
                    <span style="color: var(--color-golden-yellow);">: </span>
                    <span style="color: var(--color-orange-brown);">'15+ years'</span>
                    <span style="color: var(--color-teal-blue);">;</span>
                  </div>
                  <div class="ml-4 mt-1">
                    <span style="color: var(--color-teal-blue);">technologies</span>
                    <span style="color: var(--color-golden-yellow);">: [</span>
                    <span style="color: var(--color-orange-brown);">'Laravel', 'WordPress'</span>
                    <span style="color: var(--color-golden-yellow);">];</span>
                  </div>
                  <div class="ml-4 mt-1">
                    <span style="color: var(--color-teal-blue);">location</span>
                    <span style="color: var(--color-golden-yellow);">: </span>
                    <span style="color: var(--color-orange-brown);">'Verbania, Italy'</span>
                    <span style="color: var(--color-teal-blue);">;</span>
                  </div>
                  <div style="color: var(--color-teal-blue);">}</div>
                  <div class="mt-3" style="color: var(--color-teal-blue);">$_> Ready to code...</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="servizi" class="section-padding border-b-2 border-purple-blue">
    <div class="container-custom">
      <div class="text-center mb-20">
        <h2 class="mb-8">I NOSTRI <span class="gradient-text">[ SERVIZI ]</span></h2>
        <p class="text-xl max-w-4xl mx-auto leading-relaxed" style="color: rgba(238, 238, 238, 0.9); font-family: 'Poppins', sans-serif;">
          Offriamo soluzioni complete per il tuo business digitale,<br>
          <span style="color: var(--color-teal-blue); font-weight: 600;">></span> dalla progettazione allo sviluppo fino alla manutenzione.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {services.map((service, index) => (
          <div class="card p-8 hover:scale-105 transition-all duration-300" style={`animation-delay: ${index * 0.1}s`}>
            <div class="w-20 h-20 mb-6 p-4 rounded-lg glass-effect flex items-center justify-center" style="border: 1px solid var(--color-teal-blue);">
              <img src={service.sprite} alt={service.title} class="w-full h-full opacity-80" />
            </div>
            <h3 class="text-xl font-bold mb-4 uppercase tracking-wider" style="color: var(--color-golden-yellow); font-family: 'Poppins', sans-serif;">{service.title}</h3>
            <p class="mb-6 text-sm leading-relaxed" style="color: rgba(238, 238, 238, 0.8); font-family: 'Poppins', sans-serif;">{service.description}</p>
            <ul class="space-y-2">
              {service.features.map((feature) => (
                <li class="flex items-center space-x-3">
                  <div class="w-2 h-2 rounded-full" style="background-color: var(--color-teal-blue);"></div>
                  <span class="text-sm" style="color: var(--color-teal-blue); font-family: 'Poppins', sans-serif;">{feature}</span>
                </li>
              ))}
