---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import '../styles/global.css';

// Version metadata - this will be expanded as new versions are added
const versions = [
  {
    date: '20250121',
    title: 'Layout 2024 - Versione WordPress',
    description: 'Layout originale del sito WordPress con tema Hello Elementor, esportato come riferimento storico per la transizione verso Astro.',
    issueNumber: 'N/A',
    fileName: '20250121.html',
    features: [
      'Design WordPress/Elementor',
      'Cookie compliance',
      'Google Analytics',
      'Responsive layout'
    ]
  }
];
---

<Layout 
  title="Versioni - giobi.com - Storico dei Layout"
  description="Storico delle versioni e layout del sito giobi.com. Esplora l'evoluzione del design e delle funzionalità nel tempo."
>
  <Header slot="header" />
  
  <section class="section-padding bg-black">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h1 class="mb-6 text-green-300">[ VERSIONI DEL SITO ]</h1>
        <p class="text-xl text-green-500 max-w-3xl mx-auto font-mono">
          Storico delle versioni e layout di giobi.com.<br>
          <span class="text-green-400">></span> Esplora l'evoluzione del design e delle funzionalità nel tempo.
        </p>
      </div>
      
      <!-- Versions List -->
      <div class="space-y-8">
        {versions.map((version) => (
          <div class="card p-8 border border-green-400">
            <div class="grid lg:grid-cols-3 gap-8 items-start">
              <!-- Version Info -->
              <div class="lg:col-span-2">
                <div class="flex items-center space-x-4 mb-4">
                  <h3 class="text-2xl font-bold text-green-300 uppercase tracking-wider">
                    {version.title}
                  </h3>
                  <span class="px-3 py-1 border border-green-400 text-green-400 text-sm font-mono">
                    {version.date}
                  </span>
                </div>
                
                <p class="text-green-500 font-mono text-sm mb-6 leading-relaxed">
                  {version.description}
                </p>
                
                <div class="space-y-3">
                  <h4 class="text-green-300 font-bold uppercase tracking-wider text-sm">
                    Caratteristiche principali:
                  </h4>
                  <ul class="space-y-1">
                    {version.features.map((feature) => (
                      <li class="text-green-400 font-mono text-xs flex items-center">
                        <span class="text-green-300 mr-2">></span>
                        {feature}
                      </li>
                    ))}
                  </ul>
                </div>
                
                {version.issueNumber !== 'N/A' && (
                  <div class="mt-4">
                    <span class="text-green-500 font-mono text-xs">
                      Issue di riferimento: #{version.issueNumber}
                    </span>
                  </div>
                )}
              </div>
              
              <!-- Actions -->
              <div class="flex flex-col space-y-4">
                <a 
                  href={`/giobicom25/versions/${version.fileName}`}
                  class="btn-primary text-center"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  VISUALIZZA VERSIONE
                </a>
                
                <div class="text-center">
                  <span class="text-green-500 font-mono text-xs">
                    /versions/{version.fileName}
                  </span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Add Version Info -->
      <div class="mt-16 text-center p-8 border border-green-400 border-dashed">
        <h3 class="text-green-300 font-bold uppercase tracking-wider mb-4">
          Sistema di Versionamento
        </h3>
        <p class="text-green-500 font-mono text-sm max-w-2xl mx-auto">
          Ogni versione del sito viene archiviata come file HTML statico con metadata descrittivi.
          Il formato URL è <span class="text-green-300">/versions/YYYYMMDD.html</span> per facilità di navigazione temporale.
        </p>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</Layout>