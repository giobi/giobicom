---
import Particles from './Particles.astro';

const navigation = [
  { name: 'Home', href: '/giobicom25/' },
  { name: 'Servizi', href: '/giobicom25/#servizi' },
  { name: 'Chi Siamo', href: '/giobicom25/#chi-siamo' },
  { name: 'Contatti', href: '/giobicom25/#contatti' },
];
---

<nav class="glass-effect border-b-2 border-purple-blue sticky top-0 z-50 relative overflow-hidden">
  <Particles />
  <div class="container-custom relative z-10">
    <div class="flex justify-between items-center py-6">
      <!-- Logo -->
      <div class="flex items-center space-x-3">
        <a href="/giobicom25/" class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
          <div class="text-2xl font-bold tracking-wider gradient-text" style="font-family: 'Orbitron', monospace;">
            giobi.com
          </div>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navigation.map((item) => (
          <a
            href={item.href}
            class="text-lg font-semibold transition-all duration-300 uppercase tracking-wider hover:scale-105"
            style="color: var(--color-teal-blue); font-family: 'Orbitron', monospace;"
          >
            {item.name}
          </a>
        ))}
        <a href="/giobicom25/#contatti" class="btn-primary">
          CONTATTACI
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="mobile-menu-button text-2xl transition-colors duration-300"
          style="color: var(--color-teal-blue);"
          aria-label="Toggle menu"
        >
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              class="menu-icon"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
            <path
              class="close-icon hidden"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation -->
    <div class="mobile-menu hidden md:hidden pb-6">
      <div class="flex flex-col space-y-4">
        {navigation.map((item) => (
          <a
            href={item.href}
            class="text-lg font-semibold py-3 transition-colors duration-300 uppercase tracking-wider"
            style="color: var(--color-teal-blue); font-family: 'Orbitron', monospace;"
          >
            {item.name}
          </a>
        ))}
        <a href="/giobicom25/#contatti" class="btn-primary w-fit mt-4">
          CONTATTACI
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    const menuIcon = document.querySelector('.menu-icon');
    const closeIcon = document.querySelector('.close-icon');
    
    if (mobileMenuButton && mobileMenu && menuIcon && closeIcon) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        menuIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');
      });
      
      // Close mobile menu when clicking on a link
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
          menuIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
        });
      });
    }
  });
</script>