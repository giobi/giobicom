{
  "extends": [
    "eslint:recommended",
    "plugin:astro/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-undef": "off"
  },
  "globals": {
    "google": "readonly"
  },
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"]
      },
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "env": {
    "node": true,
    "browser": true,
    "es2022": true
  },
  "ignorePatterns": ["dist/", "node_modules/", ".astro/"]
}